<%- include("partials/header") %>
    <!-- เส้นทาง -->
    <div class="container cont">
        <a href="writing.html" class="direc">My Writing ></a>
        <span>ชื่อเรื่อง</span>
    </div>

    <!-- รายละเอียด -->
    <form action="/novels/<%= novelId %>/addchapter" method="POST">
    <div class="container w-50 cont">
        <div class="row">
            <div class="col-sm-4">
                <div>บทที่*</div>
                <input name="number" class="form-control" type="text" placeholder="(Ex. บทที่ 1, ตอนที่ 1)">
            </div>
            <div class="col-sm-8">
                <div>ชื่อตอน</div>
                <input name="title" class="form-control" type="text" placeholder="(Ex. การเดินทางของเธอและฉันคือการเรียนรู้)">
            </div>
        </div>
    </div>

    <!-- เนื้อหา -->
    <div class="container w-75 cont">
        <h4>เนื้อหา</h4>
        <textarea name="text" id="editor"></textarea>
    </div>

    <!-- ปุ่ม -->
    <div class="container">
        <div class="d-grid gap-2 d-md-block btnn">
            <button class="save" type="submit">บันทึก</button>
            <a href="manage-write.html" type="button" class="cancel">ยกเลิก</a>
        </div>
    </div>
    <input type="hidden" name="novelId" value="<%= novelId %>">
    </form>

    <script>
        //rich text editor
        ClassicEditor
            .create(document.querySelector('#editor'))
            .catch(error => {
                console.error(error);
            });
    </script>


